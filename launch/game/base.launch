<launch>
  <arg name="port" default="$(optenv HUSKY_PORT /dev/prolific)" />
  <arg name="machine" default="robot_0" />

  <node machine="$(arg machine)" pkg="clearpath_base" type="kinematic_node" name="husky_kinematic" ns="husky">
    <param name="port" value="$(arg port)" />
    <rosparam>    
      cmd_fill: True
      data:
        system_status: 10
        safety_status: 10
        encoders: 10
        differential_speed: 10
        differential_output: 10
        power_status: 1
    </rosparam>
  </node>

  <!-- Publish diagnostics information from low-level MCU outputs -->
  <node machine="$(arg machine)" pkg="husky_base" name="husky_base_diagnostics" type="diagnostics_publisher" />
	
  <!-- Publish wheel odometry from MCU encoder data -->
  <node machine="$(arg machine)" pkg="husky_base" name="husky_basic_odom" type="basic_odom_publisher" />
  
  <!-- Diagnostic Aggregator -->
  <node machine="$(arg machine)" pkg="diagnostic_aggregator" type="aggregator_node" name="diagnostic_aggregator">
    <rosparam command="load" file="$(find husky_base)/config/diagnostics.yaml"/>
  </node>
</launch>
