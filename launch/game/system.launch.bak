		<arg name="target_num" value="0" />
		<arg name="machine" value="robot_1" />
	</include> -->

	#### 5: ARBITER - RELATIVE PUBS ###########
	<include file="$(find husky_pursuit)/launch/game/tf_to_relative.launch" /> # local

	#### 6/7: ROBOT - BEHAVIORS ###########
	<include file="$(find husky_pursuit)/launch/game/behaviors.launch">
		<arg name="serpentine" value="false" />
		<arg name="linear_vel_max" value=".1" />
		<arg name="angular_vel_max" value=".4" />
		<!-- <arg name="machine" value="robot_0" /> -->
	</include>
